{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-console": "error",
    "indent": [
      "error",
      4
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ]
}
